<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" >

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Verifikasi Pembayaran"
                    android:id="@+id/txtTitle"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_cart_list"
                    android:id="@+id/relativeLayout11">
                    <View
                        android:layout_width="6dip"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/view1"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Job ID :"
                        android:id="@+id/textView66"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignTop="@+id/view1"
                        android:layout_toRightOf="@+id/view1"
                        android:layout_toEndOf="@+id/view1"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="1234567890"
                        android:id="@+id/txtJobID"
                        android:layout_below="@+id/textView66"
                        android:layout_toRightOf="@+id/view1"
                        android:layout_toEndOf="@+id/view1"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="3dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_cart_list"
                    android:layout_below="@+id/relativeLayout11"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/relativeLayout19"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" >
                    <View
                        android:layout_width="6dip"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/view1"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Nama bengkel :"
                        android:id="@+id/textView68"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignTop="@+id/view1"
                        android:layout_toRightOf="@+id/view1"
                        android:layout_toEndOf="@+id/view1"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Nama Bengkel"
                        android:id="@+id/txtNamaBengkel"
                        android:layout_below="@+id/textView68"
                        android:layout_toRightOf="@+id/view1"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="3dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_cart_list"
                    android:layout_below="@+id/relativeLayout19"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/relativeLayout20"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" >
                    <View
                        android:layout_width="6dip"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/view1"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Jarak Dari Lokasi Anda:  "
                        android:id="@+id/textView70"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignTop="@+id/view1"
                        android:layout_toRightOf="@+id/view1"
                        android:layout_toEndOf="@+id/view1"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="56km"
                        android:id="@+id/txtJarak"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/textView70"
                        android:layout_toRightOf="@+id/view1"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="3dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_cart_list"
                    android:layout_below="@+id/relativeLayout20"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/relativeLayout21">
                    <View
                        android:layout_width="6dip"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/view1"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Status Saat ini :"
                        android:id="@+id/textView72"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignTop="@+id/view1"
                        android:layout_toRightOf="@+id/view1"
                        android:layout_toEndOf="@+id/view1"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Anda sudah meng-approve Bengkel \nHarap tunggu proses verifikasi pembayaran Anda"
                        android:id="@+id/txtStatus"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/textView72"
                        android:layout_toRightOf="@+id/view1"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="3dp" />
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>